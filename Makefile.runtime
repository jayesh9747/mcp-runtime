.PHONY: build-runtime install-runtime

# Build runtime CLI
build-runtime:
	@echo "Building mcp-runtime CLI..."
	@mkdir -p bin
	go build -o bin/mcp-runtime ./cmd/mcp-runtime

# Install runtime CLI
install-runtime: build-runtime
	@echo "Installing mcp-runtime to /usr/local/bin..."
	@sudo cp bin/mcp-runtime /usr/local/bin/

# Deploy registry
deploy-registry:
	kubectl apply -k config/registry/

# Deploy operator
deploy-operator:
	make -f Makefile.operator deploy IMG=mcp-runtime-operator:latest
